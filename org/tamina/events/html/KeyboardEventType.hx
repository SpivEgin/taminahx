package org.tamina.events.html;

/**
 * Keyboard API Events
 * @class KeyboardEventType
 * @static
 */
class KeyboardEventType {
    /**
     * The keypress event is fired when a key is pressed down and that key normally produces a character value.
     * @property KEYPRESS
     * @type String
     * @static
     * @readOnly
     */
    static public inline var KEYPRESS:String='keypress';

    /**
     * The keyup event is fired when a key is released.
     * @property KEYUP
     * @type String
     * @static
     * @readOnly
     */
    static public inline var KEYUP:String='keyup';

    /**
     * The keydown event is fired when a key is pressed down.
     * @property KEYDOWN
     * @type String
     * @static
     * @readOnly
     */
    static public inline var KEYDOWN:String='keydown';
}
